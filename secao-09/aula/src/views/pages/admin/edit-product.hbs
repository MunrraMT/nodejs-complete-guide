<main>
  <h1>{{pageTitle}}</h1>
  <form class='product-form' action='/admin/{{#if editingForm}}edit{{else}}add{{/if}}-product' method='POST'>

    <div class="form-control">
      <label for="title">Title</label>
      <input required="" type="text" name="title" id="title" step="" value="{{productData.title}}">
    </div>

    <div class="form-control">
      <label for="imageUrl">Image url</label>
      <input required="" type="text" name="imageUrl" id="imageUrl" step="" value="{{productData.imageUrl}}">
    </div>

    <div class="form-control">
      <label for="price">Price</label>
      <input required="" type="number" name="price" id="price" step="0.01" value="{{productData.price}}">
    </div>

    <div class="form-control">
      <label for="description">Description</label>
      <input required="" type="text" name="description" id="description" step="" value="{{productData.description}}">
    </div>

    <button class='btn' type='submit'>
      {{#if editingForm}}Edit Product{{else}}Add Product{{/if}}
    </button>
  </form>
</main>